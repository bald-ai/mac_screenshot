{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "screenshotapp",
  "version": "0.1.0",
  "identifier": "com.michalkrsik.screenshotapp",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://127.0.0.1:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "screenshotapp",
        "width": 260,
        "height": 400,
        "visible": false,
        "skipTaskbar": true,
        "resizable": false,
        "transparent": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$HOME/Desktop/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
